# ⚠️  SECURITY WARNING: Never commit the actual .env file to version control!
# This is an example file. Copy to .env and replace with real values.

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
APP_URL=http://localhost:3000

# Admin Authentication (CRITICAL - Use strong, unique values)
ADMIN_PASSWORD=your_hashed_admin_password_here
ADMIN_PASSWORD_SALT=your_random_salt_string_here
ADMIN_ORDERS_KEY=your_secret_admin_key_here
NEXT_PUBLIC_ADMIN_ORDERS_KEY=your_secret_admin_key_here

# Clerk Authentication (CRITICAL - Required for production)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_your_clerk_publishable_key
CLERK_SECRET_KEY=sk_live_your_clerk_secret_key

# Clerk Development Mode (set to false in production)
NEXT_PUBLIC_CLERK_IS_DEVELOPMENT=true

# Clerk Custom Domain (CRITICAL for production)
# If using custom domain, set this to your custom domain (e.g., clerk.yourdomain.com)
# If using default Clerk domain, leave this commented out
# NEXT_PUBLIC_CLERK_DOMAIN=your-app-name.clerk.accounts.dev

# Clerk URLs (optional - defaults work for most cases)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/auth/signin
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/auth/signup
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# Clerk Webhook Secret (CRITICAL - Get from Clerk Dashboard)
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Email Configuration (Resend)
RESEND_API_KEY=re_your_resend_api_key_here

# Slack Notifications (CRITICAL - Keep webhook URLs secret)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR_WORKSPACE/YOUR_CHANNEL/YOUR_SECRET
SLACK_CONTACT_URL=https://hooks.slack.com/services/YOUR_WORKSPACE/YOUR_CHANNEL/YOUR_SECRET

# Upstash Redis for Rate Limiting (CRITICAL - Keep tokens secret)
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token_here

# JWT Secret for invoice tokens (CRITICAL - Use strong, unique value)
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters_long

# Database (CRITICAL - Required for production)
# Format: postgresql://<user>:<password>@<host>:<port>/<db>
DATABASE_URL=postgresql://username:password@host:port/database
DIRECT_URL=postgresql://username:password@host:port/database

# PhonePe OAuth Configuration (CRITICAL - Keep client secret secure)
PHONEPE_CLIENT_ID=your_phonepe_client_id
PHONEPE_CLIENT_SECRET=your_phonepe_client_secret
PHONEPE_CLIENT_VERSION=1
# Production: https://api.phonepe.com
# Development/testing: https://api-preprod.phonepe.com
PHONEPE_BASE_URL=https://api-preprod.phonepe.com
# CRITICAL: PhonePe callback URL - must match your production domain
# This URL receives payment status callbacks from PhonePe
PHONEPE_CALLBACK_URL=http://localhost:3000/api/phonepe/callback

# PhonePe Webhook Configuration (CRITICAL - Set these in PhonePe Business Dashboard)
# These credentials are used for webhook authentication as per PhonePe documentation
# PhonePe sends Authorization header as SHA256(username:password)
PHONEPE_WEBHOOK_USERNAME=your_phonepe_webhook_username
PHONEPE_WEBHOOK_PASSWORD=your_phonepe_webhook_password

# Production Environment Variables (Vercel)
# Set these in Vercel Dashboard -> Settings -> Environment Variables:
# DATABASE_URL=your_production_database_url
