# Razorpay Payment Gateway
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
NEXT_PUBLIC_RAZORPAY_KEY_ID=your_razorpay_key_id

# Admin Authentication
ADMIN_PASSWORD=your_hashed_admin_password
ADMIN_PASSWORD_SALT=your_random_salt_string
ADMIN_ORDERS_KEY=your_secret_admin_key_here

# Clerk Authentication (CRITICAL - Required for production)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_your_clerk_publishable_key
CLERK_SECRET_KEY=sk_live_your_clerk_secret_key

# Clerk URLs (optional - defaults work for most cases)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/auth/signin
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/auth/signup
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Application URL (for server-side operations)
APP_URL=https://your-production-domain.com
NEXT_PUBLIC_APP_URL=https://your-production-domain.com

# Slack Notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url
SLACK_CONTACT_URL=your_slack_contact_webhook_url

# Upstash Redis for Rate Limiting
UPSTASH_REDIS_REST_URL=your_upstash_redis_rest_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_rest_token

# JWT Secret for invoice tokens
JWT_SECRET=your_jwt_secret_key_here

# Database (CRITICAL - Required for production)
DATABASE_URL="postgresql://username:password@localhost:5432/clean_pods"
DIRECT_URL="postgresql://username:password@localhost:5432/clean_pods"

# Production Environment Variables (Vercel)
# Set these in Vercel Dashboard -> Settings -> Environment Variables:
# DATABASE_URL=your_production_database_url
