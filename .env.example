# Admin Authentication
ADMIN_PASSWORD=your_hashed_admin_password
ADMIN_PASSWORD_SALT=your_random_salt_string
ADMIN_ORDERS_KEY=your_secret_admin_key_here

# Clerk Authentication (CRITICAL - Required for production)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_your_clerk_publishable_key
CLERK_SECRET_KEY=sk_live_your_clerk_secret_key

# Clerk Custom Domain (CRITICAL for production - must match your Clerk dashboard domain)
# If using custom domain, set this to your custom domain (e.g., clerk.yourdomain.com)
# If using default Clerk domain, leave this commented out
# NEXT_PUBLIC_CLERK_DOMAIN=clerk.bubblebeads.in

# Clerk URLs (optional - defaults work for most cases)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/auth/signin
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/auth/signup
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Application URL (CRITICAL for production - prevents Vercel URL redirects)
# Set these to your production domain to ensure proper payment redirects
APP_URL=https://bubblebeads.in
NEXT_PUBLIC_APP_URL=https://bubblebeads.in

# Slack Notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url
SLACK_CONTACT_URL=your_slack_contact_webhook_url

# Upstash Redis for Rate Limiting
UPSTASH_REDIS_REST_URL=your_upstash_redis_rest_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_rest_token

# JWT Secret for invoice tokens
JWT_SECRET=your_jwt_secret_key_here

# Database (CRITICAL - Required for production)
DATABASE_URL="postgresql://username:password@localhost:5432/clean_pods"
DIRECT_URL="postgresql://username:password@localhost:5432/clean_pods"

# PhonePe OAuth Configuration
PHONEPE_CLIENT_ID=your_phonepe_client_id
PHONEPE_CLIENT_SECRET=your_phonepe_client_secret
PHONEPE_CLIENT_VERSION=1
# Production (default): https://api.phonepe.com
# Development/testing: https://api-preprod.phonepe.com
PHONEPE_BASE_URL=https://api.phonepe.com
# CRITICAL: PhonePe callback URL - must match your production domain
# This URL receives payment status callbacks from PhonePe
PHONEPE_CALLBACK_URL=https://bubblebeads.in/api/phonepe/callback

# Production Environment Variables (Vercel)
# Set these in Vercel Dashboard -> Settings -> Environment Variables:
# DATABASE_URL=your_production_database_url
